@import 'nib'

// colors: http://colorschemedesigner.com/#0542cw0w0w0w0
$blue=#104ba9
$red=#ff1e00
$yellow=#ffa200
$green=#00bf32
$link-color=#00B7FF

$column-width=320px
$column-gutter=20px

@import './icons'

*
  padding 0
  margin 0

/*
 * Hide from both screenreaders and browsers: h5bp.com/u
 */
.hidden
  display none !important
  visibility hidden

/*
 * Hide only visually, but have it available for screenreaders: h5bp.com/v
 */
.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px


body
  font-size: 1em
  font-family: Ubuntu, "Lucida Grande", Helvetica, Arial, sans-serif

a
  color $link-color
  transition color .3s ease

  &:hover
    color saturate($link-color, 40%)

.resort
  clearfix()
  box-sizing border-box
  margin 0 ($column-gutter/2) $column-gutter
  width $column-width
  padding .8em
  float left
  background-color GhostWhite

  &:last-child
    margin-bottom 0

  header,
  footer
    transition all .4s ease

  header
    font-size 1.2em
    line-height 1em
    border-bottom solid 1px transparent
    a
      text-decoration none

  footer
    border-top solid 1px transparent
    font-size .8em

  &.open
    header
      border-color grey
      padding-bottom .4em

    footer
      border-color grey
      padding-top .4em

.open
  .expandable
    opacity 1

  .lifts.expandable
    max-height 3000px

  footer.expandable
    max-height 300px

.expandable
  transition all .4s ease
  max-height 0
  overflow-y hidden
  opacity 0

.lifts
  list-style none

  .lift
    display block
    padding .4em 0
    clearfix()

    .name
      float left

    .status
      font-size 1.1em
      float right
      text-shadow 1px 1px 2px rgba(0,0,0,.3)
      padding 2px

.minimax
  float right
  display block
  padding-right 2px

.ls-minimax:before
  content "\e031" // plus

.open
  .ls-minimax:before
    content "\e032" // minus

.summary
  list-style none
  clearfix()

  li
    float left
    margin-right .5em

    &:last-child
      margin-right 0

body > footer
  clear both
  padding-top 1em
  line-height 1.4em
  text-align center
  a
    color #444444
    font-size 1.3em
    margin 0 .2em
    text-decoration none
    transition color .5s ease

    &:hover
      color black

contentWidth(n)
  return n == 1 ? $column-width : n * ($column-width + $column-gutter)

.content
  margin $column-gutter auto
  width contentWidth(7)


for col in 4 3 2 1
  $max = contentWidth(col + 1)
  $media_query = 'screen and (max-width:' + $max + ')'
  @media $media_query
    .content
      width contentWidth(col)
    if col == 1
      .resort
        margin-right 0
        margin-left 0
