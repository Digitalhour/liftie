extends layout

block content
  for resort in resorts
    section.resort
      header
        a(href=resort.href)= resort.name
      ul.lifts
        for status, name in resort.status
          li.lift
            span.name #{name}
            span.status(class='ls-#{status}')
      footer
        ul.summary
          for value, key in resort.stats
            li
              span(class='ls-#{key}') &nbsp;#{value}&nbsp;
              span #{key}
