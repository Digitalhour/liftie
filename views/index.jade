extends layout

block content
  for resort in resorts
    section.resort
      header
        a(href=resort.href)= resort.name
      ul.lifts
        for ls in resort.status
          li.lift
            span.name= ls.name
            span.status= ls.status
      footer
        ul.summary
          for value, key in resort.stats
            li  #{value} #{key}
